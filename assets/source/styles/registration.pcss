.registration{
  width:500px;
  margin: 0 auto;

  font-size: 1.5rem;

  &__title{
    margin-top: 25px;
    margin-bottom: 50px;
    
    line-height: 2.4rem;
  }
  &__field{
    display: block;

    width: 500px;
    height: 50px;

    padding: 0 15px;
    margin-bottom: 50px;

    font-size: 1.5rem;
  }

  &__button{
    font-size: 1.5rem;
    padding: 20px;

    cursor: pointer;
  }
}
